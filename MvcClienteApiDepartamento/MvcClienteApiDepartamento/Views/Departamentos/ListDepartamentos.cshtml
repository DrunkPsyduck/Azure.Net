@model IEnumerable<MvcClienteApiDepartamento.Models.Departamento>

@{
    ViewData["Title"] = "ListDepartamentos";
}

<h1>ListDepartamentos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.IdDepartamento" class="btn btn-primary">Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.IdDepartamento" class="btn btn-warning">Modificar</a>
                <a asp-action="Borrar" asp-route-id="@item.IdDepartamento" class="btn btn-danger">Eliminar</a>
            
            </td>
        </tr>
}
    </tbody>
</table>
