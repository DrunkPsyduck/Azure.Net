@model IEnumerable<NugetDoctorModels.Doctor>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDoctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.IdDoctor" class="btn btn-primary">Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.IdDoctor" class="btn btn-warning">Modificar</a>
                <a asp-action="Borrar" asp-route-id="@item.IdDoctor" class="btn btn-danger">Eliminar</a>

            </td>
        </tr>
        }
    </tbody>
</table>
